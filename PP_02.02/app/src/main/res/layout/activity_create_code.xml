<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSkip"
        android:layout_centerHorizontal="true"
        android:text="Создайте пароль" />

    <TextView
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/darker_gray"
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_centerHorizontal="true"
        android:text="Для защиты ваших персональных данных" />

    <LinearLayout
        android:id="@+id/cirleslinear"
        android:layout_marginLeft="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"

        >

        <ImageView
            android:id="@+id/circle1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="160dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/whitecircle">


        </ImageView>

        <ImageView
            android:id="@+id/circle2"
            android:layout_marginRight="5dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/whitecircle">


        </ImageView>

        <ImageView
            android:id="@+id/circle3"
            android:layout_marginRight="5dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/whitecircle">


        </ImageView>

        <ImageView
            android:id="@+id/circle4"
            android:layout_marginRight="5dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/whitecircle">


        </ImageView>


    </LinearLayout>

    <GridLayout
        android:layout_marginLeft="45dp"
        android:layout_width="313dp"
        android:layout_height="314dp"
        android:layout_below="@+id/tvSubtitle"
        android:layout_marginTop="100dp"
        android:columnCount="3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/borderkakto"
            android:backgroundTint="@color/darker_gray"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button2"
            android:textSize="20dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/borderkakto"
            android:backgroundTint="@color/darker_gray"
            android:text="2"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button3"
            android:textSize="20dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/borderkakto"
            android:backgroundTint="@color/darker_gray"
            android:text="3"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button4"
            android:textSize="20dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/borderkakto"
            android:backgroundTint="@color/darker_gray"
            android:text="4"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button5"
            android:textSize="20dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/borderkakto"
            android:backgroundTint="@color/darker_gray"
            android:text="5"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button6"
            android:textSize="20dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/borderkakto"
            android:backgroundTint="@color/darker_gray"
            android:text="6"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button7"
            android:textSize="20dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/borderkakto"
            android:backgroundTint="@color/darker_gray"
            android:text="7"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button8"
            android:textSize="20dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/borderkakto"
            android:backgroundTint="@color/darker_gray"
            android:text="8"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button9"
            android:textSize="20dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/borderkakto"
            android:backgroundTint="@color/darker_gray"
            android:text="9"
            android:textColor="@color/black" />

        <Button

            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:enabled="false"
            android:text="" />

        <Button
            android:id="@+id/button10"
            android:textSize="20dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/borderkakto"
            android:backgroundTint="@color/darker_gray"
            android:text="0"
            android:textColor="@color/black" />

        <!-- Другие кнопки с цифрами 0-9 -->

        <Button
            android:onClick="deletedCircles"
            android:layout_width="27dp"
            android:id="@+id/deletedCircles"
            android:layout_height="24dp"
            android:layout_marginLeft="23dp"
            android:background="@drawable/del" />




    </GridLayout>

</RelativeLayout>