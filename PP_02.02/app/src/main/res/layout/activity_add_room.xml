<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_room"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddRoomActivity">

    <!-- Верхняя панель с заголовком и кнопкой назад -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_blue"
        android:padding="20dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_button"
            android:contentDescription="Back"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/addRoomTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Добавить комнату"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Поле для ввода названия комнаты -->
    <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/roomNameInputLayout"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="20dp"
    android:fontFamily="@font/montserrat"
    android:textColorHint="@color/white"
    android:textSize="16sp"
    app:errorEnabled="true">

    <EditText
        android:id="@+id/roomName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Название комнаты"
        android:fontFamily="@font/montserrat"
        android:textColorHint="@color/white"
        android:background="@drawable/room_border"
        android:textSize="20sp"/>
</com.google.android.material.textfield.TextInputLayout>

    <!-- Заголовок выбора типа комнаты -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выбрать тип"
        android:textColor="@color/dark_blue"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />

    <!-- Сетка с типами комнат -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <!-- Каждый тип комнаты -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/sofa"
                android:contentDescription="Гостиная" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Гостиная"
                android:textColor="@color/dark_blue"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Повторите LinearLayout для каждого типа комнаты -->
    </GridLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/dark_blue"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp">

        <Button
            android:id="@+id/saveBut2"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@color/dark_blue"
            android:text="Сохранить"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>
</LinearLayout>